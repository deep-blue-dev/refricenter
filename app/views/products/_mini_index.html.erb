<div class="container">
  <br>
  <% @products.each do |product| %>
  <div class="media">
    <div class="media-left">
      <a href="#">
        <%= image_tag product.image, class: 'media-object' %>
      </a>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= product.name %></h4>
      <%= product.description %>
    </div>
    <span class="pull-right">
      <%= number_to_currency product.price %>
    </span>
  </div>

  <% end %>

</div>
